    <footer class="footer">
      <div class="container">
        <p class="muted">© <span id="year"></span> Dhiraj Kumar. Crafted with care.</p>
      </div>
    </footer>

    <script>document.getElementById('year').textContent = new Date().getFullYear();</script>
