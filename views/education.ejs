      .back-link { display: inline-block; margin-bottom: 12px; color: var(--accent); font-weight: 600; text-decoration: none; }
    </style>
  </head>
  <body>
    <div class="bg-shape shape-1"></div>
    <div class="bg-shape shape-2"></div>
    <div class="bg-shape shape-3"></div>

    <!-- Navbar -->
    <header class="header">
      <nav class="nav glass">
        <a href="/" class="logo">Dhiraj<span class="accent">.</span></a>
        <button class="nav-toggle" aria-label="Toggle navigation">
          <span class="bar"></span>
          <span class="bar"></span>
